{
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "all",
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "printWidth": 120,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": true
            }
        }
    ],
    "plugins": ["prettier-plugin-solidity"]
}
